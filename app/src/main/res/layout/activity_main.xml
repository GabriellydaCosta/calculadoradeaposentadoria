<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nome do aluno nao pode ter text view-->
    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:text="Gabrielly da Costa"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <!-- Campo para idade -->
    <EditText
        android:id="@+id/editIdade"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="username"
        android:digits="0123456789"
        android:hint="Idade"
        android:inputType="number"
        android:maxLength="3"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Spinner para gênero -->
    <Spinner
        android:id="@+id/spinnerGenero"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp" />

    <!-- Botão de cálculo -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:fontFamily="sans-serif-condensed"
        android:text="Calcular"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@android:drawable/ic_dialog_info"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Resultado aparecerá aqui"
        />
</LinearLayout>
